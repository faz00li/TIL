<!DOCTYPE html>

@using PostOffice.Models

<html>
  <head>
    <meta charset='utf-8'>
    <title>PostOffice</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  </head>
  <body>
    <h1>Inventory</h1>

    <h2>Inventory</h2>
    <ul>
      @if (Model.Count == 0)
      {
        <p>Inventory Empty</p>
      }
      @foreach(Parcel p in Model)
      {
        <form action="/parcel" method="get">
          <button type="submit" class="btn">@p.Description</button>
        </form>
      }
    </ul>

    <h3><a href="/new">Add Parcel</a></h3>
    <h3><a href="/">Home</a></h3>
  </body>
</html>
